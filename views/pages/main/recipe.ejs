<div class="container">
    <% if (err) { %>
    <div class="alert alert-danger" role="alert">
        <%= err %>
    </div>
    <% } %>
    <% if (recipe) { %>
    <h2><%= recipe.title %></h2>
    <p><%= recipe.description %></p>
    <h4>Ingredients</h4>
    <p><%= recipe.ingredients %></p>
    <h4>Directions</h4>
    <p><%= recipe.directions %></p>
    <% } %>
</div>